<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/book_dtls_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:elevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/act_book_dtls_img"
                    android:layout_width="185dp"
                    android:layout_height="254dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp" />

                <com.talentica.bookshelfapp.widgets.CustomTextView
                    android:id="@+id/act_book_dtls_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:text=""
                    android:textColor="@color/normal_grey_text"
                    android:textSize="@dimen/text_size_18"
                    font:typeface="@string/font_medium" />

                <com.talentica.bookshelfapp.widgets.CustomTextView
                    android:id="@+id/act_book_dtls_tv_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:text=""
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_14"
                    font:typeface="@string/font_regular" />

                <com.talentica.bookshelfapp.widgets.CustomTextView
                    android:id="@+id/act_book_dtls_tv_lender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/margin_15"
                    android:layout_marginTop="23dp"
                    android:text="Lender here"
                    android:textColor="@color/hint_color"
                    android:textSize="@dimen/text_size_14"
                    font:typeface="@string/font_regular" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:elevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linear_layout_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <com.talentica.bookshelfapp.widgets.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_binding"
                            android:drawablePadding="@dimen/drawable_padding"
                            android:text="@string/text_binding"
                            android:textColor="@color/hint_color"
                            android:textSize="@dimen/text_size_14"
                            font:typeface="@string/font_regular" />

                        <com.talentica.bookshelfapp.widgets.CustomTextView
                            android:id="@+id/act_book_dtls_tv_binding"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/hint_color"
                            android:textSize="@dimen/text_size_14"
                            font:typeface="@string/font_regular" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <com.talentica.bookshelfapp.widgets.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_condition"
                            android:drawablePadding="@dimen/drawable_padding"
                            android:text="@string/text_condition"
                            android:textColor="@color/hint_color"
                            android:textSize="@dimen/text_size_14"
                            font:typeface="@string/font_regular" />

                        <com.talentica.bookshelfapp.widgets.CustomTextView
                            android:id="@+id/act_book_dtls_tv_condition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/hint_color"
                            android:textSize="@dimen/text_size_14"
                            font:typeface="@string/font_regular" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_layout_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear_layout_1"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <com.talentica.bookshelfapp.widgets.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_genre"
                            android:drawablePadding="@dimen/drawable_padding"
                            android:text="@string/text_genre"
                            android:textColor="@color/hint_color"
                            android:textSize="@dimen/text_size_14"
                            font:typeface="@string/font_regular" />

                        <com.talentica.bookshelfapp.widgets.CustomTextView
                            android:id="@+id/act_book_dtls_tv_genre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/hint_color"
                            android:textSize="@dimen/text_size_14"
                            font:typeface="@string/font_regular" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <com.talentica.bookshelfapp.widgets.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_published"
                            android:drawablePadding="@dimen/drawable_padding"
                            android:text="@string/text_published"
                            android:textColor="@color/hint_color"
                            android:textSize="@dimen/text_size_14"
                            font:typeface="@string/font_regular" />

                        <com.talentica.bookshelfapp.widgets.CustomTextView
                            android:id="@+id/act_book_dtls_tv_published"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/hint_color"
                            android:textSize="@dimen/text_size_14"
                            font:typeface="@string/font_regular" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:elevation="@dimen/card_elevation">

            <LinearLayout
                android:id="@+id/secondary_book_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <com.talentica.bookshelfapp.widgets.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/publisher"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/text_size_14"
                        font:typeface="@string/font_regular" />

                    <com.talentica.bookshelfapp.widgets.CustomTextView
                        android:id="@+id/act_book_dtls_tv_publisher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/text_size_14"
                        font:typeface="@string/font_regular" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <com.talentica.bookshelfapp.widgets.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/isbn13"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/text_size_14"
                        font:typeface="@string/font_regular" />

                    <com.talentica.bookshelfapp.widgets.CustomTextView
                        android:id="@+id/act_book_dtls_tv_isbn13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/text_size_14"
                        font:typeface="@string/font_regular" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <com.talentica.bookshelfapp.widgets.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/isbn10"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/text_size_14"
                        font:typeface="@string/font_regular" />

                    <com.talentica.bookshelfapp.widgets.CustomTextView
                        android:id="@+id/act_book_dtls_tv_isbn10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/text_size_14"
                        font:typeface="@string/font_regular" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <com.talentica.bookshelfapp.widgets.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/edition"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/text_size_14"
                        font:typeface="@string/font_regular" />

                    <com.talentica.bookshelfapp.widgets.CustomTextView
                        android:id="@+id/act_book_dtls_tv_edition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/text_size_14"
                        font:typeface="@string/font_regular" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <com.talentica.bookshelfapp.widgets.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/list_price"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/text_size_14"
                        font:typeface="@string/font_regular" />

                    <com.talentica.bookshelfapp.widgets.CustomTextView
                        android:id="@+id/act_book_dtls_tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/text_size_14"
                        font:typeface="@string/font_regular" />
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:elevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_10"
                android:orientation="vertical">

                <com.talentica.bookshelfapp.widgets.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/tags"
                    android:textColor="@color/hint_color"
                    android:textSize="@dimen/text_size_14"
                    font:typeface="@string/font_regular" />

                <com.talentica.bookshelfapp.widgets.CustomTextView
                    android:id="@+id/act_book_dtls_tv_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textColor="@color/hint_color"
                    android:textSize="@dimen/text_size_14"
                    font:typeface="@string/font_regular" />
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:elevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_10"
                android:orientation="vertical">

                <com.talentica.bookshelfapp.widgets.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/book_owner_comment"
                    android:textColor="@color/hint_color"
                    android:textSize="@dimen/text_size_14"
                    font:typeface="@string/font_regular" />

                <com.talentica.bookshelfapp.widgets.CustomTextView
                    android:id="@+id/act_book_dtls_tv_owner_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text=""
                    android:textColor="@color/hint_color"
                    android:textSize="@dimen/text_size_14"
                    font:typeface="@string/font_regular" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <com.talentica.bookshelfapp.widgets.CustomButton
            android:id="@+id/act_book_dtls_btn_borrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/green"
            android:text="@string/btn_text_borrow"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"
            font:typeface="@string/font_regular" />

    </LinearLayout>
</ScrollView>