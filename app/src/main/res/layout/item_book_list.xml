<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_10"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_10"
    android:paddingTop="@dimen/margin_10">

    <ImageView
        android:id="@+id/item_home_list_img"
        android:layout_width="140dp"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY" />

    <com.talentica.bookshelfapp.widgets.CustomTextView
        android:id="@+id/item_home_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Title"
        android:textColor="@color/normal_grey_text"
        android:textSize="@dimen/text_size_14"
        font:typeface="@string/font_bold" />

    <com.talentica.bookshelfapp.widgets.CustomTextView
        android:id="@+id/item_home_list_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Author"
        android:textColor="@color/normal_grey_text"
        android:textSize="@dimen/text_size_12"
        font:typeface="@string/font_regular" />

    <com.talentica.bookshelfapp.widgets.CustomTextView
        android:id="@+id/item_home_list_lender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Lender"
        android:textColor="@color/hint_color"
        android:textSize="@dimen/text_size_12"
        font:typeface="@string/font_regular" />

</LinearLayout>