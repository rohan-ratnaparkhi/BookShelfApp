<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:elevation="@dimen/card_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/margin_10">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.talentica.bookshelfapp.widgets.CustomTextView
                    android:id="@+id/frg_book_list_tv_recently_added"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="@string/recently_added_title"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/text_size_15"
                    font:typeface="@string/font_medium" />

                <com.talentica.bookshelfapp.widgets.CustomButton
                    android:id="@+id/frg_book_list_btn_view_all"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="right"
                    android:padding="5dp"
                    android:text="@string/view_all"
                    android:textColor="@color/hint_color"
                    android:textSize="@dimen/text_size_12"
                    font:typeface="@string/font_medium" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/frg_book_list_rv_recently_added"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>